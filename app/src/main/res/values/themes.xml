<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <!-- Base application theme - Dark with red colors -->
    <style name="Theme.MyTest" parent="Theme.Material3.Dark">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Background and surface colors -->
        <item name="colorBackgroundFloating">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorOnSurfaceVariant">@color/white</item>

        <!-- Error colors -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <item name="colorOnErrorContainer">@color/white</item>


        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.MyTest.Button</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.MyTest.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>